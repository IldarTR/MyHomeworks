?php

$day = 1;

if ($day == 1) {
	echo "Понедельник <br>";
}

elseif ($day == 2) {
		echo "Вторник <br>";
	}

elseif ($day == 3) {
		echo "Среда <br>";
	}

elseif ($day == 4) {
		echo "Четверг <br>";
	}

elseif ($day == 5) {
		echo "Пятница <br>";
	}

elseif ($day == 6) {
		echo "Суббота <br>";
	}

elseif ($day == 7) {
		echo "Воскресенье <br>";
	}				
?>
